{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "npm install --prefix frontend && chmod +x frontend/node_modules/.bin/react-scripts && npm run build --prefix frontend"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/chat", "methods": ["POST"],  "dest": "backend/main.py" },
    { "src": "/(.*)",                   "dest": "frontend/build/$1" }
  ]
}
