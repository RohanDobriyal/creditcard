{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install --prefix frontend && npx --prefix frontend react-scripts build",
        "distDir": "frontend/build"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/chat", "methods": ["POST"], "dest": "backend/main.py" },
    { "src": "/(.*)",                    "dest": "frontend/build/$1" }
  ]
}
